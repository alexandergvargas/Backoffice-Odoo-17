<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="hr_duplicate_advance_wizard_form" model="ir.ui.view">
		<field name="name">hr.duplicate.advance.wizard.form</field>
		<field name="model">hr.advance.loan.wizard</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="company_ids" widget="many2many_tags" required="1"/>
					</group>
				</group>
				<footer>
					<button string="Generar" name="duplicate_by_company_advance" type="object" class="oe_highlight"/>
					<button string="Cancelar" class="oe_link" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="hr_duplicate_loan_wizard_form" model="ir.ui.view">
		<field name="name">hr.duplicate.loan.wizard.form</field>
		<field name="model">hr.advance.loan.wizard</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="company_ids" widget="many2many_tags" required="1"/>
					</group>
				</group>
				<footer>
					<button string="Generar" name="duplicate_by_company_loan" type="object" class="oe_highlight"/>
					<button string="Cancelar" class="oe_link" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
</odoo>