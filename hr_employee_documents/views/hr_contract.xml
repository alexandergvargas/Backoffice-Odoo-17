<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="hr_contract_form_salary_history" model="ir.ui.view">
		<field name="name">hr.contract.form.salary.history</field>
		<field name="model">hr.contract</field>
		<field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
		<field name="arch" type="xml">

			<xpath expr="//group[@name='salary']" position="after">
				<div>
					<br/>
					<button type="object" name="salary_history"	class="oe_highlight">Historial de Salarios</button>
				</div>
			</xpath>

		</field>
	</record>
</odoo>