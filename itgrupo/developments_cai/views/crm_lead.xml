<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_crm_lead_form_cai" model="ir.ui.view">
            <field name="name">crm.lead.form.cai</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lost_reason_id']" position="before">
                    <label for="tipo_ingreso" invisible="company_id != 10"/>
                    <div class="o_lead_opportunity_form_inline_fields">
                        <field name="tipo_ingreso" invisible="company_id != 10"/>
                    </div>
                    <label for="grupo_cliente_id" invisible="company_id != 10"/>
                    <div class="o_lead_opportunity_form_inline_fields">
                        <field name="grupo_cliente_id" invisible="company_id != 10"/>
                    </div>
                    <label for="grupo_cliente_id_02" invisible="company_id != 10"/>
                    <div class="o_lead_opportunity_form_inline_fields">
                        <field name="grupo_cliente_id_02" invisible="company_id != 10"/>
                    </div>
                    <label for="grupo_cliente_id_03" invisible="company_id != 10"/>
                    <div class="o_lead_opportunity_form_inline_fields">
                        <field name="grupo_cliente_id_03" invisible="company_id != 10"/>
                    </div>

                </xpath>
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="tipo_categ_service" invisible="company_id != 10"/>
                    <field name="tipo_factura_cai" invisible="company_id != 10"/>

                </xpath>
                <xpath expr="//field[@name='day_close']" position="after">
                    <field name="date_solicitud" invisible="company_id != 10"/>
                    <field name="date_send_pro" invisible="company_id != 10"/>
                    <field name="tipo_pacto" invisible="company_id != 10"/>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="invisible">company_id == 10</attribute>
                </xpath>
                <xpath expr="//field[@name='tag_ids']" position="before">
                    <label for="lider_comercial_id" invisible="company_id != 10"/>
                    <div class="o_lead_opportunity_form_inline_fields" invisible="company_id != 10">
                        <field name="lider_comercial_id" invisible="company_id != 10"/>
                    </div>
                </xpath>

                <xpath expr="//field[@name='day_open']" position="attributes">
                    <attribute name="invisible">company_id == 10</attribute>
                </xpath>

                <xpath expr="//field[@name='day_close']" position="attributes">
                    <attribute name="invisible">company_id == 10</attribute>
                </xpath>

                <xpath expr="//group[@name='Misc']//field[@name='team_id']" position="attributes">
                    <attribute name="string">Equipo de Facturaci√≥n</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>