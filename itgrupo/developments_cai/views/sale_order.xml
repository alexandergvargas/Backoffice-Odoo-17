<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sale_order_form_plan_cai" model="ir.ui.view">
            <field name="name">sale.order.plan.form.cai</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@name='plan_label']" position="attributes">
                    <attribute name="invisible">company_id != 22</attribute>
                </xpath>
                <xpath expr="//div[@name='plan_block']" position="attributes">
                    <attribute name="invisible">company_id != 22</attribute>
                </xpath>
                <xpath expr="//field[@name='source_id']" position="after">
                    <field name="tipo_ingreso" invisible="company_id != 10"/>
                    <field name="lider_comercial_id" invisible="company_id != 10"/>
                    <field name="tipo_categ_service" invisible="company_id != 10"/>
                    <field name="tipo_pacto" invisible="company_id != 10"/>
                    <field name="grupo_cliente_id" invisible="company_id != 10"/>
                    <field name="grupo_cliente_id_02" invisible="company_id != 10"/>
                    <field name="grupo_cliente_id_03" invisible="company_id != 10"/>
                    <field name="code_project" invisible="company_id != 10"/>
                    <field name="tipo_factura_cai" invisible="company_id != 10"/>
                </xpath>
                <xpath expr="//field[@name='team_id']" position="attributes">
                    <attribute name="string">Equipo de Facturacion</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_sale_order_update_form_plan_cai" model="ir.ui.view">
            <field name="name">sale.order.plan.update.form.cai</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='team_id']" position="attributes">
                    <attribute name="string">Equipo de Facturacion</attribute>
                    <attribute name="invisible">company_id!=10</attribute>

                </xpath>
            </field>
        </record>


    </data>
</odoo>