<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_res_partner_form_cai" model="ir.ui.view">
            <field name="name">res.partner.form.cai</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='sale']//field[@name='user_id']" position="attributes">
                    <attribute name="invisible">company_id == 10</attribute>
                </xpath>
                <xpath expr="//group[@name='sale']//field[@name='team_id']" position="before">
                    <field name="lider_comercial_sale_id" invisible="company_id != 10"/>
                </xpath>

            </field>
        </record>

        <record id="view_res_partner_form_purchase_cai" model="ir.ui.view">
            <field name="name">res.partner.form.purchase.cai</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="purchase.view_partner_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='buyer_id']" position="attributes">
                    <attribute name="invisible">company_id == 10</attribute>
                </xpath>
                <xpath expr="//field[@name='property_supplier_payment_term_id']" position="before">
                    <field name="lider_comercial_purchase_id" invisible="company_id != 10"/>
                    <field name="grupo_cliente_id" invisible="company_id != 10"/>
                    <field name="grupo_cliente_id_02" invisible="company_id != 10"/>
                    <field name="grupo_cliente_id_03" invisible="company_id != 10"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>