<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_res_partner_category_partner" model="ir.ui.view">
            <field name="name">res.partner.category.partner</field>
            <field name="model">res.partner.category</field>
            <field name="inherit_id" ref="base.view_partner_category_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="after">
                    <field name="company_id"/>
                </xpath>
            </field>
        </record>

         <record id="view_res_partner_category_partner_tree" model="ir.ui.view">
            <field name="name">res.partner.category.partner.tree</field>
            <field name="model">res.partner.category</field>
            <field name="inherit_id" ref="base.view_partner_category_list"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='display_name']" position="after">
                    <field name="company_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>