<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <record id="view_form_product_category_form_category" model="ir.ui.view">
            <field name="name">product.category.form.category</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="company_id"/>
                </xpath>
            </field>
        </record>

      <record id="view_tree_product_category_form_category" model="ir.ui.view">
            <field name="name">product.category.tree.category</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_list_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='display_name']" position="after">
                    <field name="company_id"/>
                </xpath>
            </field>
        </record>

</odoo>