<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="crm_lead_create_timesheet_view_form" model="ir.ui.view">
        <field name="name">crm.lead.create.timesheet.wizard.form</field>
        <field name="model">crm.lead.create.timesheet</field>
        <field name="arch" type="xml">
            <form string="Save time">
                <group>
                    <field name="crm_id" invisible="True"/>
                    <field name="time_spent" string="Horas utilizadas" class="oe_inline" widget="float_time" required="True"/>
                </group>
                <field name="description" widget="text" nolabel="1" placeholder="Describa su actividad..."  required="1"/>
                <footer>
                    <button string="Guardar" type="object" name="save_timesheet" class="btn btn-primary" data-hotkey="q"/>
                    <button string="Eliminar" type="object" name="action_delete_timesheet" class="btn btn-secondary" data-hotkey="w"/>
                    <button string="Descartar" special="cancel" data-hotkey="x" type="object" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
