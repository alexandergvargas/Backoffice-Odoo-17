<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="header1">
        <div t-if="doc.plantilla_reporte">
            <header>
                <div class="row">
                    <div class="col-6">
                        <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)"
                             style="width: 50% "
                             class="mt-0 pt-0"/>
                    </div>
                    <div class="col-6">

                    </div>
                </div>
            </header>
        </div>
    </template>
    <template id="header2">
        <header>
            <div class="row">
                <div class="col-6">
                    <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)"
                         style="width: 50% "
                         class="mt-0 pt-0"/>

                </div>
                <div class="col-6 h1 font-weight-bold text-right pt-1 pr-4">
                </div>
            </div>
        </header>

    </template>
    <template id="footer">
        <div class="footer"/>
    </template>

    <template id="report_saleorder_document_pgm">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="article mt0 o_report_layout_standard">
                    <div class="page" style="text-align: justify;">
                        <div class="row">
                            <div class="col-6">
                                <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)"
                                     style="width: 50% "
                                     class="mt-0 pt-0"/>
                            </div>
                            <div class="col-6">

                            </div>
                        </div>
                        <span t-field="doc.plantilla_reporte_rem" t-if="doc.plantilla_reporte"/>
                        <div style="page-break-after:always; " t-if="doc.plantilla_reporte"/>
                        <t t-if="doc.amount_total > 0">
                            <t t-call="developments_pgm.header2"/>
                            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                            <div class="row mt-4">
                                <div class="col-6"/>
                                <div class="col-6 text-right">
                                    <div t-field="doc.partner_id"/>
                                    <p t-if="doc.partner_id.direccion_complete_it"
                                       t-field="doc.partner_id.direccion_complete_it"/>
                                    <p t-if="doc.partner_id.vat">
                                        <t t-esc="doc.company_id.country_id.vat_label or 'Tax ID'"/>:
                                        <span
                                                t-field="doc.partner_id.vat"/>
                                    </p>
                                    <p t-if="doc.partner_id.phone" t-field="doc.partner_id.phone"/>
                                </div>
                            </div>
                            <t t-if="doc.partner_shipping_id == doc.partner_invoice_id
                                     and doc.partner_invoice_id != doc.partner_id
                                     or doc.partner_shipping_id != doc.partner_invoice_id">
                                <div class="row-4 m">
                                    <div class="col-6"/>
                                    <div class="col-6 text-right">
                                        <strong t-if="doc.partner_shipping_id == doc.partner_invoice_id">Invoicing and
                                            Shipping
                                            Address:
                                        </strong>
                                        <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Invoicing
                                            Address:
                                        </strong>
                                        <div t-field="doc.partner_invoice_id"/>
                                        <p t-if="doc.partner_shipping_id.direccion_complete_it"
                                           t-field="doc.partner_shipping_id.direccion_complete_it"/>
                                        <t t-if="doc.partner_shipping_id != doc.partner_invoice_id">
                                            <strong>Shipping Address:</strong>
                                            <div t-field="doc.partner_shipping_id"/>
                                            <p t-if="doc.partner_shipping_id.direccion_complete_it"
                                               t-field="doc.partner_id.direccion_complete_it"/>

                                        </t>
                                        <p t-if="doc.partner_shipping_id.phone"
                                           t-field="doc.partner_shipping_id.phone"/>
                                    </div>
                                </div>
                            </t>
                            <div class="page">
                                <div class="oe_structure"/>
                                <h2 class="mt-4">
                                    <span t-if="env.context.get('proforma', False) or is_pro_forma">Pro-Forma Invoice
                                        #
                                    </span>
                                    <span t-elif="doc.state in ['draft','sent']">Cotizaci√≥n #</span>
                                    <span t-else="">Orden #</span>
                                    <span t-field="doc.name">SO0000</span>
                                </h2>

                                <div class="row mt-4 mb-2" id="informations">
                                    <div t-if="doc.client_order_ref" class="col-auto col-3 mw-100 mb-2"
                                         name="informations_reference">
                                        <strong>Your Reference:</strong>
                                        <br/>
                                        <span class="m-0" t-field="doc.client_order_ref">SO0000</span>
                                    </div>
                                    <div t-if="doc.date_order" class="col-auto col-3 mw-100 mb-2"
                                         name="informations_date">
                                        <strong t-if="doc.state in ['draft', 'sent']">Quotation Date:</strong>
                                        <strong t-else="">Order Date:</strong>
                                        <br/>
                                        <span class="m-0" t-field="doc.date_order" t-options='{"widget": "date"}'>
                                            2023-12-31
                                        </span>
                                    </div>
                                    <div t-if="doc.validity_date and doc.state in ['draft', 'sent']"
                                         class="col-auto col-3 mw-100 mb-2"
                                         name="expiration_date">
                                        <strong>Expiration:</strong>
                                        <br/>
                                        <span class="m-0" t-field="doc.validity_date">2023-12-31</span>
                                    </div>
<!--                                    <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">-->
<!--                                        <strong>Salesperson:</strong>-->
<!--                                        <br/>-->
<!--                                        <span class="m-0" t-field="doc.user_id">Mitchell Admin</span>-->
<!--                                    </div>-->
                                </div>

                                <!-- Is there a discount on at least one line? -->
                                <t t-set="lines_to_report" t-value="doc._get_order_lines_to_report()"/>
                                <t t-set="display_discount" t-value="any(l.discount for l in lines_to_report)"/>

                                <div class="oe_structure"></div>
                                <table class="table table-sm o_main_table table-borderless mt-4">
                                    <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                                    <thead style="display: table-row-group">
                                        <tr>
                                            <th name="th_description" class="text-start">Description</th>
                                            <th name="th_quantity" class="text-end">Quantity</th>
                                            <th name="th_priceunit" class="text-end">Unit Price</th>
                                            <th name="th_discount" t-if="display_discount" class="text-end">
                                                <span>Desc.%</span>
                                            </th>
                                            <th name="th_taxes" class="text-end">Taxes</th>
                                            <th name="th_subtotal" class="text-end">
                                                <span>Amount</span>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="sale_tbody">

                                        <t t-set="current_subtotal" t-value="0"/>

                                        <t t-foreach="lines_to_report" t-as="line">

                                            <t t-set="current_subtotal"
                                               t-value="current_subtotal + line.price_subtotal"/>

                                            <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                                <t t-if="not line.display_type">
                                                    <td name="td_name">
                                                        <span t-field="line.name">Bacon Burger</span>
                                                    </td>
                                                    <td name="td_quantity" class="text-end">
                                                        <span t-field="line.product_uom_qty">3</span>
                                                        <span t-field="line.product_uom">units</span>
                                                        <span t-if="line.product_packaging_id">
                                                            (
                                                            <span t-field="line.product_packaging_qty"
                                                                  t-options='{"widget": "integer"}'/>
                                                            <span
                                                                    t-field="line.product_packaging_id"/>)
                                                        </span>
                                                    </td>
                                                    <td name="td_priceunit" class="text-end">
                                                        <span t-field="line.price_unit">3</span>
                                                    </td>
                                                    <td t-if="display_discount" class="text-end">
                                                        <span t-field="line.discount">-</span>
                                                    </td>
                                                    <t t-set="taxes"
                                                       t-value="', '.join([(tax.invoice_label or tax.name) for tax in line.tax_id])"/>
                                                    <td name="td_taxes"
                                                        t-attf-class="text-end {{ 'text-nowrap' if len(taxes) &lt; 10 else '' }}">
                                                        <span t-out="taxes">Tax 15%</span>
                                                    </td>
                                                    <td t-if="not line.is_downpayment" name="td_subtotal"
                                                        class="text-end o_price_total">
                                                        <span t-field="line.price_subtotal">27.00</span>
                                                    </td>
                                                </t>
                                                <t t-elif="line.display_type == 'line_section'">
                                                    <td name="td_section_line" colspan="99">
                                                        <span t-field="line.name">A section title</span>
                                                    </td>
                                                    <t t-set="current_section" t-value="line"/>
                                                    <t t-set="current_subtotal" t-value="0"/>
                                                </t>
                                                <t t-elif="line.display_type == 'line_note'">
                                                    <td name="td_note_line" colspan="99">
                                                        <span t-field="line.name">A note, whose content usually applies
                                                            to the
                                                            section or product above.
                                                        </span>
                                                    </td>
                                                </t>
                                            </tr>

                                            <t t-if="current_section and (line_last or lines_to_report[line_index+1].display_type == 'line_section') and not line.is_downpayment">
                                                <tr class="is-subtotal text-end">
                                                    <td name="td_section_subtotal" colspan="99">
                                                        <strong class="mr16">Subtotal</strong>
                                                        <span
                                                                t-out="current_subtotal"
                                                                t-options='{"widget": "monetary", "display_currency": doc.currency_id}'
                                                        >31.05
                                                        </span>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </tbody>
                                </table>
                                <div class="clearfix" name="so_total_summary">
                                    <div id="total" class="row" name="total">
                                        <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                                            <table class="table table-sm table-borderless">
                                                <!-- Tax totals -->
                                                <t t-set="tax_totals" t-value="doc.tax_totals"/>
                                                <t t-call="sale.document_tax_totals"/>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="oe_structure"></div>

                                <div t-if="not doc.signature" class="oe_structure"></div>
                                <div t-else="" class="mt-4 ml64 mr4" name="signature">
                                    <div class="offset-8">
                                        <strong>Signature</strong>
                                    </div>
                                    <div class="offset-8">
                                        <img t-att-src="image_data_uri(doc.signature)"
                                             style="max-height: 4cm; max-width: 8cm;"/>
                                    </div>
                                    <div class="offset-8 text-center">
                                        <span t-field="doc.signed_by">Oscar Morgan</span>
                                    </div>
                                </div>
                                <div>
                                    <span t-field="doc.note"
                                          t-attf-style="#{'text-align:justify;text-justify:inter-word;' if doc.company_id.terms_type != 'html' else ''}"
                                          name="order_note"/>
                                    <p t-if="not is_html_empty(doc.payment_term_id.note)">
                                        <span t-field="doc.payment_term_id.note">The payment should also be transmitted
                                            with
                                            love
                                        </span>
                                    </p>
                                    <div class="oe_structure"/>
                                    <p t-if="doc.fiscal_position_id and not is_html_empty(doc.fiscal_position_id.sudo().note)"
                                       id="fiscal_position_remark">
                                        <strong>Fiscal Position Remark:</strong>
                                        <span t-field="doc.fiscal_position_id.sudo().note">No further requirements for
                                            this
                                            payment
                                        </span>
                                    </p>
                                </div>
                                <div class="oe_structure"/>
                            </div>
                        </t>
                        <t t-call="developments_pgm.footer"/>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <template id="report_saleorder_raw_pgm">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="developments_pgm.report_saleorder_document_pgm" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>
    <template id="report_saleorder_pgm">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="header"/>
                <t t-set="title"
                   t-value="'SOLICITUD DE  PEDIDO' if doc.state in ('draft', 'sent') else 'PEDIDO DE VENTA'"/>
                <t t-call="developments_pgm.header1"/>
                <t t-call="developments_pgm.report_saleorder_document_pgm"
                   t-lang="doc.partner_id.lang"/>

                <t t-call="developments_pgm.footer"/>
            </t>
        </t>
    </template>

</odoo>

