<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="timesheets_analysis_report_pivot_crm" model="ir.ui.view">
        <field name="name">timesheets.analysis.report.pivot</field>
        <field name="model">timesheets.analysis.report</field>
        <field name="arch" type="xml">
            <pivot string="Timesheets Analysis" sample="1" disable_linking="True">
                <field name="crm_id" type="row"/>
                <field name="date" interval="month" type="col"/>
                <field name="amount" string="Timesheet Costs"/>
                <field name="unit_amount" type="measure" widget="timesheet_uom"/>
            </pivot>
        </field>
    </record>

    <record id="timesheets_analysis_report_graph_crm" model="ir.ui.view">
        <field name="name">timesheets.analysis.report.graph</field>
        <field name="model">timesheets.analysis.report</field>
        <field name="arch" type="xml">
            <graph string="Timesheets" sample="1" js_class="hr_timesheet_graphview" disable_linking="True">
                <field name="crm_id" type="row"/>
                <field name="amount" string="Timesheet Costs"/>
                <field name="unit_amount" type="measure" widget="timesheet_uom"/>
            </graph>
        </field>
    </record>

    <!-- Group by project-->
    <record id="timesheet_action_report_by_crm_lead" model="ir.actions.act_window">
        <field name="name">Por Oportunidad</field>
        <field name="res_model">timesheets.analysis.report</field>
        <field name="domain">[('crm_id', '!=', False)]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="hr_timesheet.hr_timesheet_report_search"/>
        <field name="view_mode">pivot,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No data yet!
            </p>
            <p>
                Analyze the projects and tasks on which your employees spend their time.
                <br/>
                Evaluate which part is billable and what costs it represents.
            </p>
        </field>
    </record>

    <record id="timesheet_action_view_report_by_crm_pivot" model="ir.actions.act_window.view">
        <field name="sequence" eval="5"/>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="pgm_crm_report.timesheets_analysis_report_pivot_crm"/>
        <field name="act_window_id" ref="timesheet_action_report_by_crm_lead"/>
    </record>

    <record id="timesheet_action_view_report_by_crm_graph" model="ir.actions.act_window.view">
        <field name="sequence" eval="6"/>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="pgm_crm_report.timesheets_analysis_report_graph_crm"/>
        <field name="act_window_id" ref="timesheet_action_report_by_crm_lead"/>
    </record>


    <menuitem id="timesheet_menu_report_timesheet_by_crm_lead"
              action="timesheet_action_report_by_crm_lead"
              parent="hr_timesheet.menu_timesheets_reports_timesheet"
              name="Por oportunidad"
              sequence="50"
    />

</odoo>

