<odoo>
	<data>
		<record id="view_res_company_account_restricted_form" model="ir.ui.view">
			<field name="name">res.company.account.restricted.form</field>
			<field name="model">res.company</field>
			<field name="inherit_id" ref="base.view_company_form" />
			<field name="arch" type="xml">
				<xpath expr="//form/sheet/notebook" position="inside">
					<page name="restricted" string="Restriccioners de modelo">
						<group>
							<field name="restricted_account"/>
						</group>	
						<field name="model_resticted_ids">
							<tree string="Modelos restringidos">
								<field name="name"/>
							</tree>
						</field>
					</page>
				</xpath>
			</field>
		</record>
	    <record id="group_restricted_models" model="res.groups">
	        <field name="name">Restringir datos para usuarios</field>
	        <field name="category_id" ref="base.module_category_hidden"/>
	    </record>
	</data>
</odoo>